<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30px">

    <TextView
        android:id="@+id/area_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:text="最多选择3个区域"
        android:textColor="@color/text_selected"
        android:textSize="32px"
        android:visibility="invisible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sel_result"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="20px"
        android:background="@color/white"
        android:orientation="horizontal"></android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/sel_provice"
        android:layout_width="400px"
        android:layout_height="80px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120px"
        android:background="@mipmap/login_regist_input_bg"
        android:drawableRight="@mipmap/pull_down_arrow"
        android:gravity="center"
        android:padding="10px"
        android:text="请选择(省)"
        android:textColor="@color/text_normal"
        android:textSize="30px" />

    <TextView
        android:id="@+id/sel_city"
        android:layout_width="400px"
        android:layout_height="80px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:background="@mipmap/login_regist_input_bg"
        android:drawableRight="@mipmap/pull_down_arrow"
        android:gravity="center"
        android:padding="10px"
        android:text="请选择(市)"
        android:textColor="@color/text_normal"
        android:textSize="30px" />

    <TextView
        android:id="@+id/sel_town"
        android:layout_width="400px"
        android:layout_height="80px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:background="@mipmap/login_regist_input_bg"
        android:drawableRight="@mipmap/pull_down_arrow"
        android:gravity="center"
        android:padding="10px"
        android:text="请选择(区/县)"
        android:textColor="@color/text_normal"
        android:textSize="30px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60px">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100px"
            android:background="@drawable/tab_item_bg"
            android:text="添加"
            android:textColor="@color/text_normal"
            android:textSize="34px" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_item_bg"
            android:text="确定"
            android:textColor="@color/text_normal"
            android:textSize="34px" />
    </LinearLayout>
</LinearLayout>