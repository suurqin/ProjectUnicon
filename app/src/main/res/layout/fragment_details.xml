<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/divider"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="350px"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="@color/white"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:text="标题"
                android:textColor="@color/text_normal"
                android:textSize="34px" />

            <LinearLayout
                android:id="@+id/title_enclosure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:textColor="@color/text_selected"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/add_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="37px"
                    android:text="添加好友"
                    android:textColor="@color/text_selected"
                    android:textSize="30px" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1px"
            android:background="@color/white"
         >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:text="详情描述"
                android:textColor="@color/text_normal"
                android:textSize="30px" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:text="(联系时说明在工程联盟app看到的)"
                android:textColor="@color/mark"
                android:textSize="30px" />
        </LinearLayout>


        <TextView
            android:id="@+id/desp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="10px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:textColor="@color/login_regist_input_txt"
            android:textSize="30px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="20px"
            android:background="@color/white"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:gravity="center_vertical"
                android:text="联系信息"
                android:textColor="@color/text_normal"
                android:textSize="34px" />

            <LinearLayout
                android:id="@+id/contact_enclosure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发起聊天"
                    android:textColor="@color/text_selected"
                    android:textSize="30px" />

                <TextView
                android:id="@+id/tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37px"
                android:text="拨打电话"
                android:textColor="@color/text_selected"
                android:textSize="30px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/divider_line" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/call"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="87px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="称呼："
                    android:textColor="@color/text_normal"
                    android:textSize="34px" />




                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="80px"
                        android:gravity="center_vertical"
                        android:textColor="@color/text_normal"
                        android:textSize="34px" />

                    <TextView
                        android:id="@+id/complain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="37px"
                        android:gravity="right"
                        android:text="投诉不实信息"
                        android:textColor="@color/red"
                        android:textSize="30px" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="87px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="联系电话："
                    android:textColor="@color/text_normal"
                    android:textSize="34px" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12px"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/text_normal"
                    android:textSize="34px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="87px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="详细地址："
                    android:textColor="@color/text_normal"
                    android:textSize="34px" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12px"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/text_normal"
                    android:textSize="34px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_marginTop="1px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="34px"
            android:text="图片信息"
            android:textColor="@color/text_normal"
            android:textSize="30px" />

        <com.jm.projectunion.common.widget.NoScrollListView
            android:id="@+id/pics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20px"
            android:background="@color/white"
            android:divider="@color/white"
            android:dividerHeight="0px"></com.jm.projectunion.common.widget.NoScrollListView>
    </LinearLayout>
</ScrollView>