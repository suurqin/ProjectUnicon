<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="15px"
    android:paddingLeft="30px"
    android:paddingRight="30px"
    android:paddingTop="15px">

    <com.jm.projectunion.common.widget.CircleImageView
        android:id="@+id/useravator"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/useravator"
        android:layout_marginLeft="26px"
        android:layout_marginStart="26px"
        android:layout_marginTop="10px"
        android:layout_toEndOf="@+id/useravator"
        android:layout_toRightOf="@+id/useravator"
        android:text="用户名"
        android:textColor="@color/text_normal"
        android:textSize="34px" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/useravator"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username"
        android:maxLines="1"
        android:text="消息简体"
        android:textColor="@color/text_normal_sub"
        android:textSize="30px" />
</com.zhy.autolayout.AutoRelativeLayout>