<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="40px">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="350px"
            android:scaleType="center"
            android:src="@mipmap/add2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="34px"
            android:paddingRight="34px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@mipmap/start_red"
                    android:drawablePadding="4px"
                    android:text="标题"
                    android:textColor="@color/text_normal"
                    android:textSize="34px" />

                <!-- 沈阳招聘力工8人 -->

                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="120px"
                    android:background="@color/translation"
                    android:gravity="center_vertical"
                    android:hint="输入标题"
                    android:textColor="@color/text_normal"
                    android:textColorHint="@color/login_regist_input_txt"
                    android:textSize="34px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="34px"
            android:paddingRight="34px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@mipmap/start_red"
                    android:drawablePadding="4px"
                    android:text="称呼"
                    android:textColor="@color/text_normal"
                    android:textSize="34px" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="120px"
                    android:background="@color/translation"
                    android:gravity="center_vertical"
                    android:hint="X女士"
                    android:textColor="@color/text_normal"
                    android:textColorHint="@color/login_regist_input_txt"
                    android:textSize="34px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="34px"
            android:paddingRight="34px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@mipmap/start_red"
                    android:drawablePadding="4px"
                    android:text="联系电话"
                    android:textColor="@color/text_normal"
                    android:textSize="34px" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50px"
                    android:background="@color/translation"
                    android:gravity="center_vertical"
                    android:hint="请输入"
                    android:inputType="phone"
                    android:textColor="@color/text_normal"
                    android:textColorHint="@color/login_regist_input_txt"
                    android:textSize="34px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="34px"
            android:paddingRight="34px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@mipmap/start_red"
                    android:drawablePadding="4px"
                    android:text="分类"
                    android:textColor="@color/text_normal"
                    android:textSize="34px" />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="120px"
                    android:background="@color/translation"
                    android:gravity="center_vertical"
                    android:hint="请选择"
                    android:textColor="@color/text_normal"
                    android:textColorHint="@color/login_regist_input_txt"
                    android:textSize="34px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/moneys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/house"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="34px"
                android:paddingRight="34px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@mipmap/start_red"
                        android:drawablePadding="4px"
                        android:text="类型"
                        android:textColor="@color/text_normal"
                        android:textSize="34px" />

                    <RadioGroup
                        android:id="@+id/house_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="left"
                        android:orientation="horizontal"
                        android:paddingLeft="120px">

                        <RadioButton
                            android:id="@+id/house_lease"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/radiobtn_bg"
                            android:checked="true"
                            android:paddingLeft="30px"
                            android:text="出租"
                            android:textColor="@color/text_normal"
                            android:textSize="34px" />

                        <RadioButton
                            android:id="@+id/house_sell"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30px"
                            android:button="@drawable/radiobtn_bg"
                            android:paddingLeft="30px"
                            android:text="出售"
                            android:textColor="@color/text_normal"
                            android:textSize="34px" />
                    </RadioGroup>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_line" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/prices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="34px"
                android:paddingRight="34px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/price_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@mipmap/start_red"
                        android:drawablePadding="4px"
                        android:text="价格"
                        android:textColor="@color/text_normal"
                        android:textSize="34px" />

                    <EditText
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="120px"
                        android:background="@color/translation"
                        android:gravity="center_vertical"
                        android:hint="请填写（面议添0）"
                        android:inputType="number"
                        android:textColor="@color/text_normal"
                        android:textColorHint="@color/login_regist_input_txt"
                        android:textSize="34px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_line" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/areas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="34px"
                android:paddingRight="34px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@mipmap/start_red"
                        android:drawablePadding="4px"
                        android:text="区域"
                        android:textColor="@color/text_normal"
                        android:textSize="34px" />

                    <TextView
                        android:id="@+id/area"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="120px"
                        android:background="@color/translation"
                        android:gravity="center_vertical"
                        android:hint="请填写(0/3)"
                        android:textColor="@color/text_normal"
                        android:textColorHint="@color/login_regist_input_txt"
                        android:textSize="34px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_line" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="34px"
            android:paddingRight="34px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@mipmap/start_red"
                    android:drawablePadding="4px"
                    android:text="地址"
                    android:textColor="@color/text_normal"
                    android:textSize="34px" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="120px"
                    android:background="@color/translation"
                    android:gravity="center_vertical"
                    android:text="当前定位信息"
                    android:textColor="@color/text_normal"
                    android:textColorHint="@color/login_regist_input_txt"
                    android:textSize="34px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:orientation="horizontal"
            android:paddingLeft="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@mipmap/start_red"
                android:drawablePadding="4px"
                android:text="详细地址"
                android:textColor="@color/text_normal"
                android:textSize="34px" />

            <EditText
                android:id="@+id/address_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="78px"
                android:background="@color/translation"
                android:gravity="center_vertical"
                android:hint="请填写"
                android:textColor="@color/text_normal"
                android:textColorHint="@color/login_regist_input_txt"
                android:textSize="34px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:background="@color/divider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:text="详细描述"
            android:textColor="@color/text_normal"
            android:textSize="34px" />

        <EditText
            android:id="@+id/intro"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="10px"
            android:background="@color/translation"
            android:hint="请填写...."
            android:textColor="@color/text_normal"
            android:textColorHint="@color/login_regist_input_txt"
            android:textSize="34px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="30px"
            android:layout_marginTop="10px"
            android:text="50字以内"
            android:textColor="@color/login_regist_input_txt"
            android:textSize="24px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:text="辅助图片上传"
                android:textColor="@color/text_normal"
                android:textSize="34px" />

            <GridView
                android:id="@+id/pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_marginTop="20px"
                android:horizontalSpacing="20px"
                android:listSelector="@color/translation"
                android:numColumns="5"
                android:scrollbars="none"></GridView>

            <TextView
                android:id="@+id/pic_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="30px"
                android:layout_marginTop="28px"
                android:text="0/5"
                android:textColor="@color/text_normal" />
        </LinearLayout>

        <Button
            android:id="@+id/release"
            android:layout_width="261px"
            android:layout_height="50px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25px"
            android:background="@drawable/login_regist_bg"
            android:text="发布"
            android:textColor="@color/text_normal"
            android:textSize="24px" />
    </LinearLayout>
</ScrollView>