<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jm.projectunion.mine.activity.IDentityActivity">
    <!-- 框区域 -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:background="#00000000"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="40dp">

        <LinearLayout
            android:id="@+id/L2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/R3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dip">

                <TableRow>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:text="姓名"
                        android:textSize="15sp" />

                    <EditText
                        android:layout_weight="1"
                        android:id="@+id/authname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:hint="请填写身份证上的姓名"
                        android:textColor="#8E8E8E"
                        android:textCursorDrawable="@null"
                        android:textSize="15sp" />
                </TableRow>

                <!-- 分割线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="身份证号"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/authidentity"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:hint="请输入正确的身份证"
                        android:textColor="#8E8E8E"
                        android:textCursorDrawable="@null"
                        android:textSize="15sp" />

                </TableRow>
                <!-- 分割线 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/divider" />

                <!--     <TableRow
                         android:id="@+id/lt"
                         android:layout_weight="1"
                         android:layout_marginTop="30dp">

                         <TextView
                             android:id="@+id/textView4"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginBottom="0dp"
                             android:gravity="center_vertical"
                             android:text="上传身份证"
                             android:textSize="15sp" />

                         &lt;!&ndash; 网格显示图片 行列间距5dp 每列宽度90dp &ndash;&gt;
                         <ImageButton
                             android:id="@+id/ImageView"
                             android:layout_weight="1"
                             android:layout_marginLeft="20dp"
                             android:layout_width="0dp"
                             android:layout_height="wrap_content"
                             android:padding="10dp"
                             android:src="@drawable/gridview_addpic"
                             android:background="#00000000"
                             android:gravity="center" >
                         </ImageButton>

                     </TableRow>-->
                <!-- 分割线 -->
                <!--<ImageView-->
                <!--android:id="@+id/yzfg"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_marginTop="15dp"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_below="@id/ImageView"-->
                <!--android:background="@drawable/login_horizontal" />-->


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:layout_marginTop="15dp"
                    android:text="声明:请如实填写您的信息,填写虚假错误信息会导致无法提现。"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/auth_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/login_regist_bg"
                    android:padding="10dp"
                    android:text="认 证"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </TableLayout>


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
