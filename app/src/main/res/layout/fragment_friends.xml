<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@mipmap/main_page_bg">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="15px">

            <Button
                android:id="@+id/friend_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30px"
                android:background="@drawable/tab_item_bg"
                android:text="好友" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="15px">

            <Button
                android:id="@+id/group_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30px"
                android:background="@drawable/tab_item_bg"
                android:text="人脉" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:layout_marginRight="20px"
            android:layout_toLeftOf="@id/location"
            android:background="@drawable/shape_block_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/friend_search"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15px"
                android:src="@mipmap/search_black" />

            <View
                android:layout_width="1px"
                android:layout_height="40px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15px"
                android:background="@color/text_normal" />

            <EditText
                android:id="@+id/friend_name"
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10px"
                android:background="@color/translation"
                android:textColor="@color/text_normal"
                android:textSize="30px" />
        </LinearLayout>
    </RelativeLayout>

    <com.jm.projectunion.common.widget.NoSlideViewPager
        android:id="@+id/friends_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.jm.projectunion.common.widget.NoSlideViewPager>

</LinearLayout>