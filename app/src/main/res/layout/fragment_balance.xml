<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/divider"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="218px"
            android:background="@color/white"
            android:visibility="gone">

            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="19900.22"
                android:textColor="@color/red"
                android:textSize="36px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/balance"
                android:layout_toRightOf="@id/balance"
                android:text=" 元"
                android:textColor="@color/text_normal"
                android:textSize="24px" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/recharge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="充值"
                android:textColor="@color/text_normal"
                android:textSize="30px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/withdrawals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="提现"
                android:textColor="@color/text_normal"
                android:textSize="30px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:background="@color/divider"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:text="我的支付宝"
            android:textColor="@color/text_normal"
            android:textSize="34px" />

        <com.jm.projectunion.common.widget.NoScrollListView
            android:id="@+id/banklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:divider="@color/divider"
            android:dividerHeight="20px"
            android:listSelector="@color/translation"></com.jm.projectunion.common.widget.NoScrollListView>

        <TextView
            android:id="@+id/bank_add"
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginTop="30px"
            android:background="@color/white"
            android:drawableLeft="@mipmap/add"
            android:drawablePadding="30px"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:text="添加支付宝"
            android:textColor="@color/text_normal"
            android:textSize="34px" />
    </LinearLayout>
</ScrollView>