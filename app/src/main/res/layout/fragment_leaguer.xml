<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="当前等级：高级会员"
                android:textColor="@color/black"
                android:textSize="24px" />

            <TextView
                android:id="@+id/bydate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="到期时间:2018-12-12 12:00:00"
                android:textColor="@color/black"
                android:textSize="24px" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260px"
            android:background="@color/divider"
            android:orientation="horizontal"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="46px">

            <LinearLayout
                android:id="@+id/level_1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btn_level1"
                    android:layout_width="180px"
                    android:layout_height="110px"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/bg_grey_dark"
                    android:gravity="center"
                    android:text="普通用户"
                    android:textColor="@color/text_normal"
                    android:textSize="30px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30px"
                    android:text="￥0/永久"
                    android:textColor="@color/text_normal"
                    android:textSize="30px" />
            </LinearLayout>

            <ImageView
                android:layout_width="44px"
                android:layout_height="48px"
                android:layout_marginTop="30px"
                android:src="@mipmap/arrow_strong" />

            <LinearLayout
                android:id="@+id/level_2"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btn_level2"
                    android:layout_width="180px"
                    android:layout_height="110px"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/bg_grey_dark"
                    android:gravity="center"
                    android:text="高级用户"
                    android:textColor="@color/text_normal"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/mid_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30px"
                    android:text="￥/年"
                    android:textColor="@color/text_normal"
                    android:textSize="30px" />
            </LinearLayout>

            <ImageView
                android:layout_width="44px"
                android:layout_height="48px"
                android:layout_marginTop="30px"
                android:src="@mipmap/arrow_strong" />

            <LinearLayout
                android:id="@+id/level_3"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btn_level3"
                    android:layout_width="180px"
                    android:layout_height="110px"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/bg_grey_dark"
                    android:gravity="center"
                    android:text="企业用户"
                    android:textColor="@color/text_normal"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/heig_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30px"
                    android:text="￥0/年"
                    android:textColor="@color/text_normal"
                    android:textSize="30px" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:text="用户规则"
            android:textColor="@color/text_normal"
            android:textSize="34px" />

        <TextView
            android:id="@+id/leaguer_rules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="30px"
            android:textColor="@color/text_normal"
            android:textSize="34px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:background="@color/divider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="30px"
            android:text="开通用户"
            android:textColor="@color/text_normal"
            android:textSize="34px" />

        <RadioGroup
            android:id="@+id/vip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="100px">

            <RadioButton
                android:id="@+id/senior_leaguers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/radiobtn_bg"
                android:checked="true"
                android:paddingLeft="30px"
                android:text="高级用户"
                android:textColor="@color/text_normal"
                android:textSize="34px" />

            <RadioButton
                android:id="@+id/enterprise_leaguers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/radiobtn_bg"
                android:paddingLeft="30px"
                android:text="企业用户"
                android:textColor="@color/text_normal"
                android:textSize="34px" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:background="@color/divider"
            android:padding="10px"
            android:text="支付方式选择"
            android:textColor="@color/text_normal" />

        <RadioGroup
            android:id="@+id/pay_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:background="@color/white"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/pay_wx"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:button="@color/translation"
                android:drawableLeft="@mipmap/icon_wxpay"
                android:drawablePadding="30px"
                android:drawableRight="@drawable/radiobtn_bg"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:text="微信支付" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider" />

            <RadioButton
                android:id="@+id/pay_alipay"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:button="@color/translation"
                android:drawableLeft="@mipmap/icon_alipay"
                android:drawablePadding="30px"
                android:drawableRight="@drawable/radiobtn_bg"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:text="支付宝支付" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider" />

            <RadioButton
                android:id="@+id/pay_ye"
                android:layout_width="match_parent"
                android:layout_height="88px"
                android:button="@color/translation"
                android:checked="true"
                android:drawableLeft="@mipmap/icon_alipay"
                android:drawablePadding="30px"
                android:drawableRight="@drawable/radiobtn_bg"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:text="余额支付" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider" />
        </RadioGroup>

        <Button
            android:id="@+id/buy"
            android:layout_width="350px"
            android:layout_height="62px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70px"
            android:background="@drawable/login_regist_bg"
            android:text="开通/续费"
            android:textColor="@color/text_normal"
            android:textSize="34px" />
    </LinearLayout>
</ScrollView>